<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.milind.mapplication3.MainActivity1"
    tools:showIn="@layout/activity_main1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout1"
            >
            <TextView android:text="Hello Hi why kay!" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#123404"

                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am Button"
                android:id="@+id/button"

                android:layout_marginBottom="11dp"
                android:layout_marginLeft="49dp"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="11dp"
                android:textColor="#00f327"
                android:onClick="sendMessage"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout2"
            android:layout_below="@+id/linearLayout1"
            android:weightSum="1">
            <EditText
                android:id="@+id/edit_message"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:hint="@string/Enter_text"
                android:layout_weight="0.68" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout3"
            android:layout_below="@+id/linearLayout2">
            <TextView android:text="Hello Hi why kay!" android:layout_width="200dp"
                android:layout_height="62dp"
                android:textSize="25dp"
                android:textColor="#f23404"
                android:id="@+id/counter"
                />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:text="Add"
                android:id="@+id/buttonAdd"

                android:layout_marginBottom="11dp"
                android:layout_marginLeft="19dp"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="11dp"
                android:textColor="#29ff27"
                android:onClick="sendMessage"
                />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:text="sub"
                android:id="@+id/buttonSub"

                android:layout_marginBottom="11dp"
                android:layout_marginLeft="9dp"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="11dp"
                android:textColor="#f20037"
                android:onClick="sendMessage"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:orientation="horizontal"

        android:layout_below="@+id/linearLayout3">
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Database"
            android:id="@+id/scroll"
            android:layout_gravity="left"
            android:textColor="#00f327"
            android:onClick="scroll"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="start S"
            android:id="@+id/button1"
            android:layout_gravity="center"

            android:textColor="#00f327"
            android:onClick="displayAct"
            /> <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Database"
        android:id="@+id/database"

        android:textColor="#00f327"
        android:onClick="sendMessage"
        />

    </LinearLayout>
    </RelativeLayout>

